<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:padding="@dimen/small_dimens"
        style="@style/Theme.QuizzByGB.Header"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:layout_margin="@dimen/xxl_dimens"
        android:theme="@style/Base.Theme.QuizzByGB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"        />

    <ImageView
        android:id="@+id/question_pic"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/welcome_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        android:layout_margin="@dimen/large_dimens"/>

    <Button
        android:background="@drawable/custom_ripple_effect"

        android:focusable="true"
        android:clickable="true"
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xxl_dimens"
        android:padding="@dimen/large_dimens"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_pic"
        android:text="@string/buttonNext"/>



</androidx.constraintlayout.widget.ConstraintLayout>